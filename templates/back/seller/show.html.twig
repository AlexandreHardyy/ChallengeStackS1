
{% extends 'back_base.html.twig' %}

{% block title %}Seller resquest{% endblock %}

{% block body %}
<div class="bg-slate-100 shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
        <div class="mx-auto max-w-2xl py-16 px-4 sm:py-24 sm:px-6 lg:max-w-7xl lg:px-8">
        <div class="lg:grid lg:grid-cols-2 lg:items-start lg:gap-x-8">
            <div class="mt-10 px-4 sm:mt-16 sm:px-0 lg:mt-0">
            <h1 class="text-3xl font-bold tracking-tight text-gray-900">{{ seller.userRequest.email }}</h1>
    
            <div class="mt-6">
            <h3 class="sr-only">Description</h3>

            <div class="space-y-6 text-base text-gray-700">
                <p>{{ seller.description }}</p>
            </div>
            </div>
            {% if seller.userRequest.roles[0] is same as("ROLE_SELLER") %}
                {% set verified = true %}
            {% else %}
            <form class="mt-6">
                <div class="sm:flex-col1 mt-10 flex">
                    <a href="{{ path('admin_app_seller_validate', {'id': seller.id}) }}"  class="flex max-w-xs flex-1 items-center justify-center rounded-md border border-transparent bg-indigo-600 py-3 px-8 text-base font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:ring-offset-gray-50 sm:w-full">
                        Accept request
                    </a>
                </div>
            </form>
            {% endif %}
            </div>
        </div>
        </div>
    </div>
</div>


{% endblock %}