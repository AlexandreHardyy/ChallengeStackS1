{{ form_start(form) }}
<form class="space-y-8 divide-y divide-gray-200">
    <div class="space-y-8 divide-y divide-gray-200 sm:space-y-5">
      <div class="space-y-6 pt-8 sm:space-y-5 sm:pt-10">
        <div>
          <h3 class="text-lg font-medium leading-6 text-gray-900 dark:text-slate-300">Category</h3>
          <p class="mt-1 max-w-2xl text-sm text-gray-500 dark:text-slate-400">Git it a nice name.</p>
        </div>
        <div class="space-y-6 sm:space-y-5">
          <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:border-t sm:border-gray-200 sm:pt-5">
            <label for="first-name" class="block text-sm font-medium text-gray-700 dark:text-slate-300 sm:mt-px sm:pt-2">Name</label>
            <div class="mt-1 sm:col-span-2 sm:mt-0">
              {{ form_widget(form.name, {'attr':  {'class': 'block w-full max-w-lg rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:max-w-xs sm:text-sm'}} )}}
            </div>
            {{ form_errors(form.name ) }}
          </div>
        </div>
      </div>
    </div>



    <div class="pt-5">
      <div class="flex justify-end">
        <button type="submit" class="ml-3 inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">{{ button_label|default('Save') }}</button>
      </div>
    </div>
    {{ form_rest(form) }}
  </form>

{{ form_end(form) }}

