						</div>
						<div class="ml-4 lg:ml-6">
							<a href="{{ path('front_app_register') }}" class="-m-2 p-2 text-gray-500 flex justify-end">Sign in</a>
						</div>
					{% endif %}
				</div>
			</div>

		</div>
	</div>
</div>

