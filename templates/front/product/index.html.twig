<!DOCTYPE html>

<title>Product index</title>

{% block body %}
    <h1>Product index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>title</th>
                <th></th>
                <th>price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.title }}</td>
                <td><img src="{{ vich_uploader_asset(product, 'imageFile') }}" alt="{{ product.title }}"></td>
                <td>{{ product.price }}</td>
                <td>
                    <a href="{{ path('front_app_product_show', {'id': product.id}) }}">show</a>
                    <a href="{{ path('front_app_product_edit', {'id': product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('front_app_product_new') }}">Create new</a>
{% endblock %}
