<div class="mx-24">
<h2 class="text-2xl font-bold my-2">Informations du produit</h2>
    <div class="mb-8">
        {% if product.isValid %}
            <div>- Produit Validé ✅</div>
        {% endif %}
        {% if product.isBanned %}
            <div>- Produit Banni ❌</div>
        {% endif %}
    </div>
{{ form_start(form, {'attr': {'class': 'flex justify-between gap-24 max-md:flex-col'}}) }}
    <div class="flex-1">
        <div class="flex flex-col my-4">
            {{ form_errors(form.imageFile) }}
            {{ form_label(form.imageFile) }}
            {{ form_widget(form.imageFile) }}
            {{ form_help(form.imageFile) }}
        </div>
    </div>
    <div class="flex-1">
        <div class="flex flex-col my-4">
            {{ form_errors(form.isActive) }}
            {{ form_label(form.isActive) }}
            {{ form_widget(form.isActive) }}
            {{ form_help(form.isActive) }}
        </div>
        <div class="flex flex-col my-4">
            {{ form_errors(form.title) }}
            {{ form_label(form.title) }}
            {{ form_widget(form.title) }}
            {{ form_help(form.title) }}
        </div>
        <div class="flex flex-col my-4">
            {{ form_errors(form.description) }}
            {{ form_label(form.description) }}
            {{ form_widget(form.description) }}
            {{ form_help(form.description) }}
        </div>
        <div class="flex flex-col my-4">
            {{ form_errors(form.price) }}
            {{ form_label(form.price) }}
            {{ form_widget(form.price) }}
            {{ form_help(form.price) }}
        </div>
        <div class="flex gap-5">
            <button class="mt-6 px-4 py-2 w-64 rounded-md text-center bg-emerald-600 text-white hover:bg-emerald-700">{{ button_label|default('Save') }}</button>
            <a class="mt-6 px-4 py-2 w-64 rounded-md text-center bg-slate-400 text-white hover:bg-slate-600" href="{{ path('front_app_seller') }}">Back to List</a>
        </div>
    </div>
    {{ form_end(form) }}
    {{ include('front/product/_delete_form.html.twig') }}
</div>