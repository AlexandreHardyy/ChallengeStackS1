        <a class="mt-6 px-4 py-2 w-64 rounded-md text-center bg-slate-400 text-white hover:bg-slate-600" href="{{ path('front_app_product_index') }}">Back to List</a>
    </div>
    {{ form_end(form) }}
</div>

