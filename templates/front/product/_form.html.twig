<div class="mx-24">
{{ form_start(form) }}
    <div class="flex my-4 items-center gap-5">
        {{ form_errors(form.isActive) }}
        {{ form_label(form.isActive) }}
        {{ form_widget(form.isActive) }}
        {{ form_help(form.isActive) }}
    </div>
    <div class="flex flex-col my-4">
        {{ form_errors(form.title) }}
        {{ form_label(form.title) }}
        {{ form_widget(form.title) }}
        {{ form_help(form.title) }}
    </div>
    <div class="flex flex-col my-4">
        {{ form_errors(form.description) }}
        {{ form_label(form.description) }}
        {{ form_widget(form.description) }}
        {{ form_help(form.description) }}
    </div>
    <div class="flex flex-col my-4">
        {{ form_errors(form.price) }}
        {{ form_label(form.price) }}
        {{ form_widget(form.price) }}
        {{ form_help(form.price) }}
    </div>
    <div class="flex flex-col my-4">
        {{ form_errors(form.imageFile) }}
        {{ form_label(form.imageFile) }}
        {{ form_widget(form.imageFile) }}
        {{ form_help(form.imageFile) }}
    </div>
    <div class="flex flex-col my-4">
        {{ form_errors(form.category) }}
        {{ form_label(form.category) }}
        {{ form_widget(form.category) }}
        {{ form_help(form.category) }}
    </div>
    <div class="flex gap-5">
        <button class="mt-6 px-4 py-2 w-64 rounded-md text-center bg-emerald-600 text-white hover:bg-emerald-700">{{ button_label|default('save') | trans }}</button>
        <a class="mt-6 px-4 py-2 w-64 rounded-md text-center bg-slate-400 text-white hover:bg-slate-600" href="{{ path('front_app_product_index') }}">{{ 'back_to_list' | trans }}</a>
    </div>
    {{ form_end(form) }}
</div>

