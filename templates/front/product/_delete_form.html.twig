<form method="post" action="{{ path('front_app_product_delete', {'id': product.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
    <button class="mt-6 px-4 mx-24 py-2 w-64 rounded-md text-center bg-red-300 text-white hover:bg-red-500">Delete</button>
</form>
