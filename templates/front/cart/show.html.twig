<!DOCTYPE html>

<title>Cart</title>

{% block body %}
    <h1>Panier</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Price</th>
            <th></th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for item in cart.products %}
            <tr>
                <td>{{ item.price }}</td>
                <td><img src="{{ vich_uploader_asset(item, 'imageFile') }}" alt="{{ item.price }}"></td>
                <td>{{ include('front/cart/_delete_form.html.twig') }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}